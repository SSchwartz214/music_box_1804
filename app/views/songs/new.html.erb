<html>
  <head>
    <link rel="stylesheets" href="reset.css">
    <link rel="stylesheets" href="form.css">
    <link href="https://fonts.googleapis.com/css?family=Economica|Knewave" rel="stylesheets">
    <title>Add Song</title>
  </head>
  <body>
    <div id="top-header">
      <h1>Create A New Song</h1>
    </div>

    <%= form_for [@artist, @song] do |f| %>
    <div class="container">

    <div class="row">
      <%= f.label :title, class:'label' %>
      <%= f.text_field :title, class:'text-box'%>
    </div>

    <div class="row">
      <%= f.label :length, class:'label' %>
      <%= f.text_field :length, class:'text-box' %>
    </div>

    <div class="row">
      <%= f.label :play_count, class:'label' %>
      <%= f.text_field :play_count, class:'text-box' %>
    </div>

    <div class="row">
      <%= f.submit class: 'button'%>
    </div>
    <% end %>
  </div>
</body>
</html>
